<% provide(:title, 'Home') %>


<h1>Страница Авторизации</h1>
<p>
  <%= form_tag({:action => 'logon'},{name: 'login_form', id: 'login_form'}) do -%>

      <p><%= label_tag(:userName, "Ваше имя") %><br>
      <%= text_field_tag(:userName) %></p>

      <p><%= label_tag(:userPassword, "Ваш пароль") %><br>
      <%= password_field_tag(:userPassword) %></p>

      <p><%= submit_tag("Войти") %></p>
  <%end%>
</p>
